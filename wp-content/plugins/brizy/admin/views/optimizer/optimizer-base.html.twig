<div class="wrap">
    <h1>Image Optimization</h1>

    <h2 class="nav-tab-wrapper">
        {% for tab in tab_list %}
            {% set active_class = tab['is_selected'] ? 'nav-tab-active' : '' %}
            <a href="{{ tab['href'] }}" class="nav-tab {{ active_class }}">
                {{ tab['label'] }}
            </a>
        {% endfor %}
    </h2>

    <div class="tab-content">
        {% block tab_content %}
            {{ tab_content }}
        {% endblock %}
    </div>
</div>


